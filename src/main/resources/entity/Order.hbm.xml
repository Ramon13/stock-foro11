<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entity">
	
	<class name="Order" table="pedido">
	
		<id name="id" column="id" type="java.lang.Long">
			<generator class="identity" />		
		</id>
		
		<property name="finalDate" column="date" type="java.time.LocalDate"/>
		
		<property name="releaseDate" column="releaseDate" type="java.time.LocalDate"/>
		
		<property name="status" column="status" type="java.lang.Character"/>
		
		<property name="receivedPersonName" column="receivedUser" type="java.lang.String"/>
		
		<many-to-one name="customer" column="login_id" class="Customer"/>
	</class>
</hibernate-mapping>