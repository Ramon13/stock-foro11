<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entity">
	
	<class name="Administrator" table="administrator">
	
		<id name="id" column="id" type="java.lang.Long">
			<generator class="identity" />		
		</id>
		
		<property name="name" column="user" type="java.lang.String" />
		
		<property name="password" column="password" type="java.lang.String"/>
		
		<property name="resetPassword" column="reset_password" type="java.lang.Boolean"/>
		
		<property name="active" column="active" type="java.lang.Boolean"/>
		
		<many-to-one name="permission" column="permission_id" class="Permission" />
		
		<many-to-one name="locale" column="locale_id" class="Locale" />
		
	</class>
</hibernate-mapping>